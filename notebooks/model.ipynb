   "source": [
    "import pandas as pd\n",
    "import copy\n",
    "\n",
    "from sklearn.ensemble import RandomForestClassifier\n",
    "from sklearn.metrics import classification_report\n",
    "\n",
    "\n",
    "# преобразуем входной датасет:\n",
    "def work_with_info(input_file, out_file):\n",
    "    with open(input_file, 'r') as f:\n",
    "        wrl = f.read()\n",
    "        re = {'u': '', 'A': '', 'B': '', 'C': '', 'D': ''}\n",
    "        for key, value in re.items():\n",
    "            wrl = wrl.replace(key, value)\n",
    "\n",
    "    with open(out_file, 'w') as f_out:\n",
    "        f_out.write(wrl)\n",
    "        return str(out_file)\n",
    "\n",
    "\n",
    "# precision, recall, f1-score and accuracy\n",
    "def report_about_work_model(y_train, model, full_df):\n",
    "    report = classification_report(y_train[13300:15000],\n",
    "                                   model.predict(full_df[13300:15000]),\n",
    "                                   target_names=['Female', 'Male'])\n",
    "    print(report)\n",
    "\n",
    "\n",
    "def created_model(x_train_sparse, x_test_sparse, y_train, idx_test):\n",
    "    # инициализируем модель\n",
    "    model = RandomForestClassifier()\n",
    "\n",
    "    # обучение модели на тестовой выборке\n",
    "    model.fit(x_train_sparse[:idx_test - 1700], y_train[:idx_test - 1700])\n",
    "\n",
         # оценка работы модели: f1-score
    "    report_about_work_model(y_train, model, x_test_sparse)\n",
    "\n",
    "    # обучение модели на ВСЕЙ выборке\n",
    "    model.fit(x_train_sparse[:idx_test], y_train[:idx_test])\n",
    "\n",
    "    return model\n",
    "\n",
    "\n",
    "def model_preparation():\n",
    "    # ==================================================================================\n",
    "    # загружаем обучающую выборку\n",
    "    name = work_with_info('product_new.csv', 'product666.csv')\n",
    "    train_df = pd.read_csv(name)\n",
    "\n",
    "    # загружаем тестовую выборку\n",
    "    test_df = pd.read_csv('session_new.csv')\n",
    "\n",
    "    # задаём индекс для обучения исходя из размера входных данных\n",
    "    idx_test = 15000\n",
    "\n",
    "    # приводим значения 'female', 'male' под формат -1 и +1\n",
    "    for item in range(idx_test):\n",
    "        test_df['gender'][item] = -1 if test_df['gender'][item] == 'female' else 1\n",
    "\n",
    "    # выбираем нашу целевую переменную\n",
    "    y_train = test_df['gender'][:idx_test]\n",
    "\n",
    "    full_df = copy.deepcopy(train_df)\n",
    "\n",
    "    y_train = y_train.astype('int64')\n",
    "\n",
    "    x_train_sparse = full_df[:idx_test]\n",
    "    x_test_sparse = full_df[idx_test:]\n",
    "\n",
    "    # =============================================================\n",
    "    # Random forest\n",
    "    # =============================================================\n",
    "    my_model = created_model(x_train_sparse, x_test_sparse, y_train, idx_test)\n",
    "    return my_model\n",
    "\n",
    "\n",
    "def predict_for_one_session(my_model, ses, df):\n",
    "\n",
    "    new_id = ses[1:]\n",
    "    new_id = int(new_id)\n",
    "    value = df.loc[df['session_id'] == new_id]\n",
    "    predict = my_model.predict(value)\n",
    "    return predict\n"
   ]
